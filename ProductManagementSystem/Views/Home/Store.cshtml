
@model ProductManagementSystem.Models.Store

@{
    ViewBag.Title = "Store";
}

<div class="large-offset-4 large-4 columns form_box">
    <h4 class="heading"><span>Login to your Store</span></h4>
    <div class="large-12 columns">
        <table  style="width: 100%;border:none;margin-bottom:10%;">
            <thead>
                <tr>
                    <th>State Name</th>

                    <th>Store Name</th>

                    <th>Action</th>
                </tr>
            </thead>
            @{
                string mStateName = "";

                foreach (var item in Model.StoreItemList)
                {

                    if (item.StateName != mStateName)
                    {
                        mStateName = item.StateName;
                <tr>

                    <td>
                        <span id="spnStateName">@item.StateName</span>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td>@item.StoreName</td>
                    <td>
                        @Html.ActionLink("Select", "SelectStore", new { id = item.StoreID })
                    </td>
                </tr>
                    }
                    else
                    {
                <tr>
                    <td></td>
                    <td>
                        <span id="spnStoreName">@item.StoreName</span>
                    </td>
                    <td>
                        @Html.ActionLink("Select", "Store", new { id = item.StoreID })
                    </td>
                </tr>
                    }

                }
            }
        </table>
    </div>
</div>
